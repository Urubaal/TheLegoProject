# Environment configuration for LEGO Purchase Suggestion System

# Database Configuration
DATABASE_URL=postgresql://lego_user@localhost:5432/lego_purchase_system
POSTGRES_DB=lego_purchase_system
POSTGRES_USER=lego_user
# POSTGRES_PASSWORD= (no password required - using trust authentication)

# Backend Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h

# Frontend Configuration
FRONTEND_URL=http://localhost:8080

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@lego-purchase-system.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for password reset tokens)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD= (optional - if Redis requires authentication)

# CORS Configuration
CORS_ORIGIN=http://localhost:8080
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_STORAGE=database
LOG_RETENTION_DAYS=30
LOG_CLEANUP_INTERVAL_HOURS=6

# Google Cloud Logging (optional - for production)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Datadog Logging (optional - for production)
# DATADOG_API_KEY=your-datadog-api-key
# HOSTNAME=your-server-hostname